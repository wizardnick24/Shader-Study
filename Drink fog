Shader "Custom/IceCubeFog"
{
    Properties
    {
        _FogColor("Fog Color", Color) = (0.8,0.8,0.9,0.5) // light gray-blue
        _Height("Fog Height", Float) = 1.0
        _NoiseTex("Noise Texture", 2D) = "white" {}
        _ScrollSpeed("Noise Scroll Speed", Vector) = (0.05,0.05,0,0)
        _AlphaMultiplier("Alpha Multiplier", Float) = 1.0
    }

    SubShader
    {
        Tags { "RenderType"="Transparent" }
        LOD 100
        Blend SrcAlpha OneMinusSrcAlpha
        ZWrite Off

        Pass
        {
            CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag
            #include "UnityCG.cginc"

            struct appdata
            {
                float4 vertex : POSITION;
                float2 uv : TEXCOORD0;
            };

            struct v2f
            {
                float4 pos : SV_POSITION;
                float2 uv : TEXCOORD0;
            };

            sampler2D _NoiseTex;
            float4 _ScrollSpeed;
            fixed4 _FogColor;
            float _AlphaMultiplier;

            v2f vert(appdata v)
            {
                v2f o;
                o.pos = UnityObjectToClipPos(v.vertex);
                o.uv = v.uv;
                return o;
            }

            fixed4 frag(v2f i) : SV_Target
            {
                // Scroll noise over time
                float2 uv = i.uv + _ScrollSpeed.xy * _Time.y;
                float noise = tex2D(_NoiseTex, uv).r;

                // Alpha is modulated by noise for variation
                float alpha = _FogColor.a * noise * _AlphaMultiplier;

                return fixed4(_FogColor.rgb, alpha);
            }
            ENDCG
        }
    }
}
