Shader "Custom/AudioReactiveDancefloor"
{
    Properties
    {
        _MainTex("Base Floor Texture", 2D) = "white" {}
        _AudioLevel("Audio Level", Float) = 0.0
        _BaseColor("Base Color", Color) = (0.2, 0.2, 0.2, 1)
        _PulseColor("Pulse Color", Color) = (1,0.3,0.7,1)
        _PulseIntensity("Pulse Intensity", Range(0,5)) = 2.0
        _TileSize("Tile Size", Float) = 1.0
    }

    SubShader
    {
        Tags { "RenderType"="Opaque" }
        LOD 200

        Pass
        {
            CGPROGRAM
            #pragma surface surf Standard alpha:fade
            sampler2D _MainTex;
            float _AudioLevel;
            fixed4 _BaseColor;
            fixed4 _PulseColor;
            float _PulseIntensity;
            float _TileSize;

            struct Input
            {
                float2 uv_MainTex;
                float3 worldPos;
            };

            void surf(Input IN, inout SurfaceOutputStandard o)
            {
                // Base texture color
                fixed4 texCol = tex2D(_MainTex, IN.uv_MainTex);

                // Create grid for tiles
                float2 tileUV = frac(IN.worldPos.xz / _TileSize);

                // Pulse effect per tile
                float brightness = _AudioLevel * _PulseIntensity;

                // Optional: tile gradient to avoid flat look
                float tileFactor = smoothstep(0.0, 0.5, tileUV.x) * smoothstep(0.0, 0.5, tileUV.y);

                fixed4 color = lerp(_BaseColor, _PulseColor, brightness * tileFactor);

                o.Albedo = color.rgb;
                o.Metallic = 0.0;
                o.Smoothness = 0.8;
                o.Alpha = 1.0;
            }
            ENDCG
        }
    }
}
