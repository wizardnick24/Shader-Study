Shader "Custom/AudioReactiveKaleidoscopeSkybox"
{
    Properties
    {
        _BaseColor("Base Color", Color) = (1,0.5,0,1)      // Base sky color
        _AudioLevel("Audio Level", Float) = 0.0            // Controlled by music
        _RotationSpeed("Rotation Speed", Float) = 0.1     // Auto rotation speed
        _Symmetry("Symmetry", Float) = 6.0                // Number of kaleidoscope segments
    }

    SubShader
    {
        Tags { "RenderType"="Opaque" }
        Cull Off
        ZWrite Off
        Lighting Off

        Pass
        {
            CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag
            #include "UnityCG.cginc"

            struct appdata
            {
                float4 vertex : POSITION;
            };

            struct v2f
            {
                float4 pos : SV_POSITION;
                float3 dir : TEXCOORD0;
            };

            fixed4 _BaseColor;
            float _AudioLevel;
            float _RotationSpeed;
            float _Symmetry;
            float _Time;

            v2f vert(appdata v)
            {
                v2f o;
                o.pos = UnityObjectToClipPos(v.vertex);

                // Convert vertex to direction vector
                o.dir = normalize(v.vertex.xyz);
                return o;
            }

            fixed4 frag(v2f i) : SV_Target
            {
                float3 dir = i.dir;

                // Convert direction to spherical coordinates
                float angle = atan2(dir.z, dir.x);
                float radius = length(dir.xz);

                // Apply kaleidoscope symmetry
                angle = fmod(angle * _Symmetry, 6.28318); // 2*PI
                radius += sin(angle * 3.0 + _Time.y * _RotationSpeed) * 0.1;

                // Use radius and angle to create pattern
                float pattern = sin(radius * 10.0 + angle * 5.0 + _Time.y * _RotationSpeed);

                // Audio modulates brightness
                float brightness = saturate((pattern + 1.0) * 0.5 * (1.0 + _AudioLevel));

                fixed4 col = _BaseColor * brightness;
                col.a = 1.0;
                return col;
            }
            ENDCG
        }
    }
}
