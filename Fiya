Shader "Custom/FireShader"
{
    Properties
    {
        _MainTex("Base Flame Texture", 2D) = "white" {}   // Flame shape texture
        _Color("Flame Color", Color) = (1,0.5,0,1)        // Orange fire color
        _Speed("Animation Speed", Float) = 1.0            // Speed of flicker
        _Distortion("Distortion Strength", Float) = 0.1   // UV distortion
    }

    SubShader
    {
        Tags { "RenderType"="Transparent" "Queue"="Transparent" }
        LOD 100
        Blend SrcAlpha OneMinusSrcAlpha
        ZWrite Off

        Pass
        {
            CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag
            #include "UnityCG.cginc"

            struct appdata
            {
                float4 vertex : POSITION;
                float2 uv : TEXCOORD0;
            };

            struct v2f
            {
                float4 pos : SV_POSITION;
                float2 uv : TEXCOORD0;
            };

            sampler2D _MainTex;
            fixed4 _Color;
            float _Speed;
            float _Distortion;

            v2f vert(appdata v)
            {
                v2f o;
                o.pos = UnityObjectToClipPos(v.vertex);
                o.uv = v.uv;
                return o;
            }

            fixed4 frag(v2f i) : SV_Target
            {
                float2 uv = i.uv;

                // Animate flame rising
                uv.y += _Time.y * _Speed;

                // UV distortion for flicker
                float noise = tex2D(_MainTex, uv + float2(sin(uv.y*10.0 + _Time.y*5.0), 0)).r;
                uv.x += (noise - 0.5) * _Distortion;

                // Sample flame texture
                float flameAlpha = tex2D(_MainTex, uv).r;

                // Final color with alpha
                fixed4 col = _Color;
                col.a *= flameAlpha;

                return col;
            }
            ENDCG
        }
    }
}
